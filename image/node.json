{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "us-west-2",
    "cni_version": "v0.5.2",
    "k8s_version": "v1.6.4",
    "flanneld_version": "v0.7.1",
    "version": "0.1"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "source_ami_filter": {
      "filters": {
      "virtualization-type": "hvm",
      "name": "CoreOS-stable-*",
      "root-device-type": "ebs"
      },
      "owners": ["595879546273"],
      "most_recent": true
    },
    "instance_type": "t2.micro",
    "ssh_username": "core",
    "ami_name": "k8s_{{ user `k8s_version` }}-{{ user `version` }}_{{ timestamp }}"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "./image/install.sh",
      "destination": "/home/core/install.sh"
    },
    {
      "type": "file",
      "source": "./kubesetup/kubesetup",
      "destination": "/home/core/kubesetup"
    },
    {
      "type": "shell",
      "inline": [
        "sudo chmod +x /home/core/install.sh",
        "sudo K8S_VERSION={{user `k8s_version`}} CNI_VERSION={{user `cni_version`}} FLANNELD_VERSION={{user `flanneld_version`}} /home/core/install.sh"
      ]
    }
  ]
}
